audio-convert() {
    if [[ $# -eq 0 ]] ; then
        echo "audio-convert aif mp3 // converts all files with aif extensions to mp3"
    else  
        find . -name "*.$1" -exec ffmpeg -i {} -ab 320k -ar 48k -qscale:a 0 "${0%.$1}.$2" \;
    fi
}

audio-delete() {
    if [[ $# -eq 0 ]] ; then
        echo "audio-delete mp3 // delete all audiofiles with the extension mp3"
    else
        find . -name "*.$1" -exec rm {} \;
    fi
}